void main() {
  // can declare the data type directly
  print("Normal Declaration");
  int x = 10;
  print(x);
  print(x.runtimeType);//it is used to get the type of the variable x

  String y = "Welcome";
  print(y);
  print(y.runtimeType);

  double z = 23.34;
  print(z);
  print(z.runtimeType);

  // can use var keyword so that it accepts any type of input
  print("");
  print("Var Declaration");
  var value = 20;
  print(value);
  print(value.runtimeType);

  var value2 = "Hello,this is var keyword";
  print(value2);
  print(value2.runtimeType);

  // can use dynamic keyoword when a type of variable that can change its value during runtime
  print("");
  print("Dynamic Declaration");
  dynamic value3 = 10;
  print(value3);
  print(value3.runtimeType);

  //changing the value of the variable can be done in dynamic because it take the datatype at the runtime
  //but in var it is not possible
  value3 = 45.78;
  print(value3);
  print(value3.runtimeType);

  value3 = "Hello,this is dynamic keyword";
  print(value3);
  print(value3.runtimeType);
}

/*
OUTPUT:

Normal Declaration
10
int
Welcome
String
23.34
double

Var Declaration
20
int
Hello,this is var keyword
String

Dynamic Declaration
10
int
45.78
double
Hello,this is dynamic keyword
String
*/